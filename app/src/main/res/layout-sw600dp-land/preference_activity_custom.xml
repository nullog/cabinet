<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.itmp.cabinet.ui.SettingsActivity">

    <include layout="@layout/appbar_actionbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/appbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?appbar_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/categories_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:layout_width="200dp" />

            <View
                android:id="@+id/vertical_shadow"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@drawable/vertical_shadow" />

            <FrameLayout
                android:id="@+id/settings_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>